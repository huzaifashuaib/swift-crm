generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  hashedPassword String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userName String?
  verifyToken String?
  imgUrl  String?
  publicId String?
}

model Product {
  id          String   @id @map("_id")
  name        String
  price       Int
  category    String
  quantity    Int
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
